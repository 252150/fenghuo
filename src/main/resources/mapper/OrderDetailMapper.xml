<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wanjia.infoshopmallmanage.mapper.OrderDetailMapper">

    <resultMap type="com.wanjia.infoshopmallmanage.entity.OrderDetail" id="OrderDetailMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="orderId" column="order_id" jdbcType="INTEGER"/>
        <result property="productName" column="product_name" jdbcType="VARCHAR"/>
        <result property="recommendImage" column="recommend_image" jdbcType="VARCHAR"/>
        <result property="num" column="num" jdbcType="INTEGER"/>
        <result property="productPrice" column="product_price" jdbcType="OTHER"/>
        <result property="payPrice" column="pay_price" jdbcType="OTHER"/>
        <result property="goodsId" column="goods_id" jdbcType="INTEGER"/>
        <result property="specification" column="specification" jdbcType="VARCHAR"/>
        <result property="usePoints" column="use_points" jdbcType="INTEGER"/>
        <result property="isComment" column="is_comment" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="OrderDetailMap">
        select
          id, order_id, product_name, recommend_image, num, product_price, pay_price, goods_id, specification, use_points, is_comment
        from weathersystem.order_detail
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="OrderDetailMap">
        select
          id, order_id, product_name, recommend_image, num, product_price, pay_price, goods_id, specification, use_points, is_comment
        from weathersystem.order_detail
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="OrderDetailMap">
        select
          id, order_id, product_name, recommend_image, num, product_price, pay_price, goods_id, specification, use_points, is_comment
        from weathersystem.order_detail
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="orderId != null">
                and order_id = #{orderId}
            </if>
            <if test="productName != null and productName != ''">
                and product_name = #{productName}
            </if>
            <if test="recommendImage != null and recommendImage != ''">
                and recommend_image = #{recommendImage}
            </if>
            <if test="num != null">
                and num = #{num}
            </if>
            <if test="productPrice != null">
                and product_price = #{productPrice}
            </if>
            <if test="payPrice != null">
                and pay_price = #{payPrice}
            </if>
            <if test="goodsId != null">
                and goods_id = #{goodsId}
            </if>
            <if test="specification != null and specification != ''">
                and specification = #{specification}
            </if>
            <if test="usePoints != null">
                and use_points = #{usePoints}
            </if>
            <if test="isComment != null">
                and is_comment = #{isComment}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into weathersystem.order_detail
        <trim prefix = "(" suffix = ")" suffixOverrides=",">
            <if test="orderId != null">
                order_id,
            </if> 
            <if test="productName != null and productName != ''">
                product_name,
            </if> 
            <if test="recommendImage != null and recommendImage != ''">
                recommend_image,
            </if> 
            <if test="num != null">
                num,
            </if> 
            <if test="productPrice != null">
                product_price,
            </if> 
            <if test="payPrice != null">
                pay_price,
            </if> 
            <if test="goodsId != null">
                goods_id,
            </if> 
            <if test="specification != null and specification != ''">
                specification,
            </if> 
            <if test="usePoints != null">
                use_points,
            </if> 
            <if test="isComment != null">
                is_comment,
            </if> 
        </trim>
        <trim prefix = "values (" suffix = ")" suffixOverrides=",">
            <if test="orderId != null">
                #{orderId},
            </if>  
            <if test="productName != null and productName != ''">
                #{productName},
            </if>  
            <if test="recommendImage != null and recommendImage != ''">
                #{recommendImage},
            </if>  
            <if test="num != null">
                #{num},
            </if>  
            <if test="productPrice != null">
                #{productPrice},
            </if>  
            <if test="payPrice != null">
                #{payPrice},
            </if>  
            <if test="goodsId != null">
                #{goodsId},
            </if>  
            <if test="specification != null and specification != ''">
                #{specification},
            </if>  
            <if test="usePoints != null">
                #{usePoints},
            </if>  
            <if test="isComment != null">
                #{isComment},
            </if>  
        </trim>
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update weathersystem.order_detail
        <set>
            <if test="orderId != null">
                order_id = #{orderId},
            </if>
            <if test="productName != null and productName != ''">
                product_name = #{productName},
            </if>
            <if test="recommendImage != null and recommendImage != ''">
                recommend_image = #{recommendImage},
            </if>
            <if test="num != null">
                num = #{num},
            </if>
            <if test="productPrice != null">
                product_price = #{productPrice},
            </if>
            <if test="payPrice != null">
                pay_price = #{payPrice},
            </if>
            <if test="goodsId != null">
                goods_id = #{goodsId},
            </if>
            <if test="specification != null and specification != ''">
                specification = #{specification},
            </if>
            <if test="usePoints != null">
                use_points = #{usePoints},
            </if>
            <if test="isComment != null">
                is_comment = #{isComment},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from weathersystem.order_detail where id = #{id}
    </delete>

</mapper>