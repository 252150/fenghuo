<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wanjia.infoshopmallmanage.mapper.RolePermissionMapper">

    <resultMap type="com.wanjia.infoshopmallmanage.entity.RolePermission" id="RolePermissionMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
        <result property="permissionId" column="permission_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="RolePermissionMap">
        select
          id, role_id, permission_id
        from weathersystem.role_permission
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="RolePermissionMap">
        select
          id, role_id, permission_id
        from weathersystem.role_permission
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="RolePermissionMap">
        select
          id, role_id, permission_id
        from weathersystem.role_permission
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
            <if test="permissionId != null">
                and permission_id = #{permissionId}
            </if>
        </where>
    </select>

    <select id="rolePermissionByRoleId" resultType="java.lang.Long">
        select permission_id from role_permission where role_id = #{roleId}
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into weathersystem.role_permission
        <trim prefix = "(" suffix = ")" suffixOverrides=",">
            <if test="roleId != null">
                role_id,
            </if> 
            <if test="permissionId != null">
                permission_id,
            </if> 
        </trim>
        <trim prefix = "values (" suffix = ")" suffixOverrides=",">
            <if test="roleId != null">
                #{roleId},
            </if>  
            <if test="permissionId != null">
                #{permissionId},
            </if>  
        </trim>
    </insert>
    <insert id="insertPermission">
        insert into weathersystem.role_permission(role_id,permission_id)
        values
        <foreach collection="permissionIds" item="permissionId" index="index"
                 separator=",">
            (
            #{roleId},#{permissionId}
            )
        </foreach>
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update weathersystem.role_permission
        <set>
            <if test="roleId != null">
                role_id = #{roleId},
            </if>
            <if test="permissionId != null">
                permission_id = #{permissionId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from weathersystem.role_permission where id = #{id}
    </delete>
    <delete id="deleteByRoleId">
        delete from weathersystem.role_permission where role_id = #{roleId}
    </delete>

</mapper>