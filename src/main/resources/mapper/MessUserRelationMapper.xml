<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wanjia.infoshopmallmanage.mapper.MessUserRelationMapper">

    <resultMap type="com.wanjia.infoshopmallmanage.entity.MessUserRelation" id="MessUserRelationMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="messPublishId" column="mess_publish_id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="MessUserRelationMap">
        select
          id, mess_publish_id, user_id
        from weathersystem.mess_user_relation
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="MessUserRelationMap">
        select
          id, mess_publish_id, user_id
        from weathersystem.mess_user_relation
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="MessUserRelationMap">
        select
          id, mess_publish_id, user_id
        from weathersystem.mess_user_relation
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="messPublishId != null">
                and mess_publish_id = #{messPublishId}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into weathersystem.mess_user_relation
        <trim prefix = "(" suffix = ")" suffixOverrides=",">
            <if test="messPublishId != null">
                mess_publish_id,
            </if> 
            <if test="userId != null">
                user_id,
            </if> 
        </trim>
        <trim prefix = "values (" suffix = ")" suffixOverrides=",">
            <if test="messPublishId != null">
                #{messPublishId},
            </if>  
            <if test="userId != null">
                #{userId},
            </if>  
        </trim>
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update weathersystem.mess_user_relation
        <set>
            <if test="messPublishId != null">
                mess_publish_id = #{messPublishId},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from weathersystem.mess_user_relation where id = #{id}
    </delete>

</mapper>