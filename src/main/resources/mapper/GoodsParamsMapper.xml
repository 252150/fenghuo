<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wanjia.infoshopmallmanage.mapper.GoodsParamsMapper">

    <resultMap type="com.wanjia.infoshopmallmanage.entity.GoodsParams" id="GoodsParamsMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="goodsId" column="goods_id" jdbcType="INTEGER"/>
        <result property="goodsParamName" column="goods_param_name" jdbcType="VARCHAR"/>
        <result property="goodsParamValue" column="goods_param_value" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="GoodsParamsMap">
        select
          id, goods_id, goods_param_name, goods_param_value
        from weathersystem.goods_params
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="GoodsParamsMap">
        select
          id, goods_id, goods_param_name, goods_param_value
        from weathersystem.goods_params
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="GoodsParamsMap">
        select
          id, goods_id, goods_param_name, goods_param_value
        from weathersystem.goods_params
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="goodsId != null">
                and goods_id = #{goodsId}
            </if>
            <if test="goodsParamName != null and goodsParamName != ''">
                and goods_param_name = #{goodsParamName}
            </if>
            <if test="goodsParamValue != null and goodsParamValue != ''">
                and goods_param_value = #{goodsParamValue}
            </if>
        </where>
    </select>
    <select id="selectByGoodsId" resultMap="GoodsParamsMap">
        select
          id, goods_id, goods_param_name, goods_param_value
        from weathersystem.goods_params
        where goods_id = #{goodsId}
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into weathersystem.goods_params
        <trim prefix = "(" suffix = ")" suffixOverrides=",">
            <if test="goodsId != null">
                goods_id,
            </if> 
            <if test="goodsParamName != null and goodsParamName != ''">
                goods_param_name,
            </if> 
            <if test="goodsParamValue != null and goodsParamValue != ''">
                goods_param_value,
            </if> 
        </trim>
        <trim prefix = "values (" suffix = ")" suffixOverrides=",">
            <if test="goodsId != null">
                #{goodsId},
            </if>  
            <if test="goodsParamName != null and goodsParamName != ''">
                #{goodsParamName},
            </if>  
            <if test="goodsParamValue != null and goodsParamValue != ''">
                #{goodsParamValue},
            </if>  
        </trim>
    </insert>
    <insert id="batchInsert">
        insert into weathersystem.goods_params(goods_id,goods_param_name,goods_param_value)
        values
        <foreach collection="goodsParams" item="goodsParam" index="index"
                 separator=",">
            (
                #{goodsId},#{goodsParam.goodsParamName},#{goodsParam.goodsParamValue}
            )
        </foreach>
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update weathersystem.goods_params
        <set>
            <if test="goodsId != null">
                goods_id = #{goodsId},
            </if>
            <if test="goodsParamName != null and goodsParamName != ''">
                goods_param_name = #{goodsParamName},
            </if>
            <if test="goodsParamValue != null and goodsParamValue != ''">
                goods_param_value = #{goodsParamValue},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from weathersystem.goods_params where id = #{id}
    </delete>

</mapper>