<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wanjia.infoshopmallmanage.mapper.GroupMembersMapper">

    <resultMap type="com.wanjia.infoshopmallmanage.entity.GroupMembers" id="GroupMembersMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="groupId" column="group_id" jdbcType="INTEGER"/>
        <result property="memberId" column="member_id" jdbcType="INTEGER"/>
        <result property="memberName" column="member_name" jdbcType="VARCHAR"/>
        <result property="menberHeadPortrait" column="menber_head_portrait" jdbcType="VARCHAR"/>
        <result property="noDisturbState" column="no_disturb_state" jdbcType="INTEGER"/>
        <result property="noTopState" column="no_top_state" jdbcType="INTEGER"/>
        <result property="noRemindState" column="no_remind_state" jdbcType="INTEGER"/>
        <result property="groupNickname" column="group_nickname" jdbcType="VARCHAR"/>
        <result property="enterGroupTime" column="enter_group_time" jdbcType="TIMESTAMP"/>
        <result property="groupRemarks" column="group_remarks" jdbcType="VARCHAR"/>
        <result property="groupImg" column="group_img" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="GroupMembersMap">
        select
          id, group_id, member_id, member_name, menber_head_portrait, no_disturb_state, no_top_state, no_remind_state, group_nickname, enter_group_time, group_remarks, group_img
        from weathersystem.group_members
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="GroupMembersMap">
        select
          id, group_id, member_id, member_name, menber_head_portrait, no_disturb_state, no_top_state, no_remind_state, group_nickname, enter_group_time, group_remarks, group_img
        from weathersystem.group_members
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="GroupMembersMap">
        select
          id, group_id, member_id, member_name, menber_head_portrait, no_disturb_state, no_top_state, no_remind_state, group_nickname, enter_group_time, group_remarks, group_img
        from weathersystem.group_members
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="groupId != null">
                and group_id = #{groupId}
            </if>
            <if test="memberId != null">
                and member_id = #{memberId}
            </if>
            <if test="memberName != null and memberName != ''">
                and member_name = #{memberName}
            </if>
            <if test="menberHeadPortrait != null and menberHeadPortrait != ''">
                and menber_head_portrait = #{menberHeadPortrait}
            </if>
            <if test="noDisturbState != null">
                and no_disturb_state = #{noDisturbState}
            </if>
            <if test="noTopState != null">
                and no_top_state = #{noTopState}
            </if>
            <if test="noRemindState != null">
                and no_remind_state = #{noRemindState}
            </if>
            <if test="groupNickname != null and groupNickname != ''">
                and group_nickname = #{groupNickname}
            </if>
            <if test="enterGroupTime != null">
                and enter_group_time = #{enterGroupTime}
            </if>
            <if test="groupRemarks != null and groupRemarks != ''">
                and group_remarks = #{groupRemarks}
            </if>
            <if test="groupImg != null and groupImg != ''">
                and group_img = #{groupImg}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into weathersystem.group_members
        <trim prefix = "(" suffix = ")" suffixOverrides=",">
            <if test="groupId != null">
                group_id,
            </if> 
            <if test="memberId != null">
                member_id,
            </if> 
            <if test="memberName != null and memberName != ''">
                member_name,
            </if> 
            <if test="menberHeadPortrait != null and menberHeadPortrait != ''">
                menber_head_portrait,
            </if> 
            <if test="noDisturbState != null">
                no_disturb_state,
            </if> 
            <if test="noTopState != null">
                no_top_state,
            </if> 
            <if test="noRemindState != null">
                no_remind_state,
            </if> 
            <if test="groupNickname != null and groupNickname != ''">
                group_nickname,
            </if> 
            <if test="enterGroupTime != null">
                enter_group_time,
            </if> 
            <if test="groupRemarks != null and groupRemarks != ''">
                group_remarks,
            </if> 
            <if test="groupImg != null and groupImg != ''">
                group_img,
            </if> 
        </trim>
        <trim prefix = "values (" suffix = ")" suffixOverrides=",">
            <if test="groupId != null">
                #{groupId},
            </if>  
            <if test="memberId != null">
                #{memberId},
            </if>  
            <if test="memberName != null and memberName != ''">
                #{memberName},
            </if>  
            <if test="menberHeadPortrait != null and menberHeadPortrait != ''">
                #{menberHeadPortrait},
            </if>  
            <if test="noDisturbState != null">
                #{noDisturbState},
            </if>  
            <if test="noTopState != null">
                #{noTopState},
            </if>  
            <if test="noRemindState != null">
                #{noRemindState},
            </if>  
            <if test="groupNickname != null and groupNickname != ''">
                #{groupNickname},
            </if>  
            <if test="enterGroupTime != null">
                #{enterGroupTime},
            </if>  
            <if test="groupRemarks != null and groupRemarks != ''">
                #{groupRemarks},
            </if>  
            <if test="groupImg != null and groupImg != ''">
                #{groupImg},
            </if>  
        </trim>
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update weathersystem.group_members
        <set>
            <if test="groupId != null">
                group_id = #{groupId},
            </if>
            <if test="memberId != null">
                member_id = #{memberId},
            </if>
            <if test="memberName != null and memberName != ''">
                member_name = #{memberName},
            </if>
            <if test="menberHeadPortrait != null and menberHeadPortrait != ''">
                menber_head_portrait = #{menberHeadPortrait},
            </if>
            <if test="noDisturbState != null">
                no_disturb_state = #{noDisturbState},
            </if>
            <if test="noTopState != null">
                no_top_state = #{noTopState},
            </if>
            <if test="noRemindState != null">
                no_remind_state = #{noRemindState},
            </if>
            <if test="groupNickname != null and groupNickname != ''">
                group_nickname = #{groupNickname},
            </if>
            <if test="enterGroupTime != null">
                enter_group_time = #{enterGroupTime},
            </if>
            <if test="groupRemarks != null and groupRemarks != ''">
                group_remarks = #{groupRemarks},
            </if>
            <if test="groupImg != null and groupImg != ''">
                group_img = #{groupImg},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from weathersystem.group_members where id = #{id}
    </delete>

</mapper>