<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wanjia.infoshopmallmanage.mapper.UserCollectMapper">

    <resultMap type="com.wanjia.infoshopmallmanage.entity.UserCollect" id="UserCollectMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="collectType" column="collect_type" jdbcType="INTEGER"/>
        <result property="contentId" column="content_id" jdbcType="INTEGER"/>
        <result property="collectTime" column="collect_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserCollectMap">
        select
          id, user_id, collect_type, content_id, collect_time
        from weathersystem.user_collect
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserCollectMap">
        select
          id, user_id, collect_type, content_id, collect_time
        from weathersystem.user_collect
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserCollectMap">
        select
          id, user_id, collect_type, content_id, collect_time
        from weathersystem.user_collect
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="collectType != null">
                and collect_type = #{collectType}
            </if>
            <if test="contentId != null">
                and content_id = #{contentId}
            </if>
            <if test="collectTime != null">
                and collect_time = #{collectTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into weathersystem.user_collect
        <trim prefix = "(" suffix = ")" suffixOverrides=",">
            <if test="userId != null">
                user_id,
            </if> 
            <if test="collectType != null">
                collect_type,
            </if> 
            <if test="contentId != null">
                content_id,
            </if> 
            <if test="collectTime != null">
                collect_time,
            </if> 
        </trim>
        <trim prefix = "values (" suffix = ")" suffixOverrides=",">
            <if test="userId != null">
                #{userId},
            </if>  
            <if test="collectType != null">
                #{collectType},
            </if>  
            <if test="contentId != null">
                #{contentId},
            </if>  
            <if test="collectTime != null">
                #{collectTime},
            </if>  
        </trim>
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update weathersystem.user_collect
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="collectType != null">
                collect_type = #{collectType},
            </if>
            <if test="contentId != null">
                content_id = #{contentId},
            </if>
            <if test="collectTime != null">
                collect_time = #{collectTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from weathersystem.user_collect where id = #{id}
    </delete>

</mapper>