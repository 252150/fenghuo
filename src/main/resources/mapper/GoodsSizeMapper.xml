<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wanjia.infoshopmallmanage.mapper.GoodsSizeMapper">

    <resultMap type="com.wanjia.infoshopmallmanage.entity.GoodsSize" id="GoodsSizeMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="goodsId" column="goods_id" jdbcType="INTEGER"/>
        <result property="goodsPropertyId" column="goods_property_id" jdbcType="INTEGER"/>
        <result property="goodsPropertyValue" column="goods_property_value" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="GoodsSizeMap">
        select
          id, goods_id, goods_property_id, goods_property_value
        from weathersystem.goods_size
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="GoodsSizeMap">
        select
          id, goods_id, goods_property_id, goods_property_value
        from weathersystem.goods_size
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="GoodsSizeMap">
        select
          id, goods_id, goods_property_id, goods_property_value
        from weathersystem.goods_size
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="goodsId != null">
                and goods_id = #{goodsId}
            </if>
            <if test="goodsPropertyId != null">
                and goods_property_id = #{goodsPropertyId}
            </if>
            <if test="goodsPropertyValue != null and goodsPropertyValue != ''">
                and goods_property_value = #{goodsPropertyValue}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into weathersystem.goods_size
        <trim prefix = "(" suffix = ")" suffixOverrides=",">
            <if test="goodsId != null">
                goods_id,
            </if> 
            <if test="goodsPropertyId != null">
                goods_property_id,
            </if> 
            <if test="goodsPropertyValue != null and goodsPropertyValue != ''">
                goods_property_value,
            </if> 
        </trim>
        <trim prefix = "values (" suffix = ")" suffixOverrides=",">
            <if test="goodsId != null">
                #{goodsId},
            </if>  
            <if test="goodsPropertyId != null">
                #{goodsPropertyId},
            </if>  
            <if test="goodsPropertyValue != null and goodsPropertyValue != ''">
                #{goodsPropertyValue},
            </if>  
        </trim>
    </insert>
    <insert id="batchInsert">
        insert into weathersystem.goods_size(goods_id,goods_property_id,goods_property_value)
        values
        <foreach collection="goodsSizes" item="goodsSize" index="index"
                 separator=",">
            (
            #{goodsSize.goodsId},#{id},#{goodsSize.goodsPropertyValue}
            )
        </foreach>
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update weathersystem.goods_size
        <set>
            <if test="goodsId != null">
                goods_id = #{goodsId},
            </if>
            <if test="goodsPropertyId != null">
                goods_property_id = #{goodsPropertyId},
            </if>
            <if test="goodsPropertyValue != null and goodsPropertyValue != ''">
                goods_property_value = #{goodsPropertyValue},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from weathersystem.goods_size where id = #{id}
    </delete>
    <delete id="deleteByPropertyId">
        delete from weathersystem.goods_size where goods_property_id = #{id}
    </delete>
    <delete id="deleteByGoodsId">
        delete from weathersystem.goods_size where goods_id = #{goodsId}
    </delete>

</mapper>