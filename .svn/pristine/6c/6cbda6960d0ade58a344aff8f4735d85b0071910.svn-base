<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wanjia.infoshopmallmanage.mapper.AdminMapper">

    <resultMap type="com.wanjia.infoshopmallmanage.entity.Admin" id="AdminMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="adminAccount" column="admin_account" jdbcType="VARCHAR"/>
        <result property="adminPassword" column="admin_password" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="adminAccountName" column="admin_account_name" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="AdminMap">
        select
          id, user_id, admin_account, admin_password, status, phone, admin_account_name
        from weathersystem.admin
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="AdminMap">
        select
          id, user_id, admin_account, admin_password, status, phone, admin_account_name
        from weathersystem.admin
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="conditionQuery" resultMap="AdminMap">
        select
          id, user_id, admin_account, admin_password, status, phone, admin_account_name
        from weathersystem.admin
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="adminAccount != null and adminAccount != ''">
                and admin_account = #{adminAccount}
            </if>
            <if test="adminPassword != null and adminPassword != ''">
                and admin_password = #{adminPassword}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="phone != null and phone != ''">
                and phone = #{phone}
            </if>
            <if test="adminAccountName != null and adminAccountName != ''">
                and admin_account_name = #{adminAccountName}
            </if>
        </where>
    </select>
    <select id="selectByAccountAndPwd" resultMap="AdminMap">
        select * from weathersystem.admin where admin_account = #{account} and admin_password = #{password}
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into weathersystem.admin
        <trim prefix = "(" suffix = ")" suffixOverrides=",">
            <if test="userId != null">
                user_id,
            </if> 
            <if test="adminAccount != null and adminAccount != ''">
                admin_account,
            </if> 
            <if test="adminPassword != null and adminPassword != ''">
                admin_password,
            </if> 
            <if test="status != null">
                status,
            </if> 
            <if test="phone != null and phone != ''">
                phone,
            </if> 
            <if test="adminAccountName != null and adminAccountName != ''">
                admin_account_name,
            </if> 
        </trim>
        <trim prefix = "values (" suffix = ")" suffixOverrides=",">
            <if test="userId != null">
                #{userId},
            </if>  
            <if test="adminAccount != null and adminAccount != ''">
                #{adminAccount},
            </if>  
            <if test="adminPassword != null and adminPassword != ''">
                #{adminPassword},
            </if>  
            <if test="status != null">
                #{status},
            </if>  
            <if test="phone != null and phone != ''">
                #{phone},
            </if>  
            <if test="adminAccountName != null and adminAccountName != ''">
                #{adminAccountName},
            </if>  
        </trim>
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update weathersystem.admin
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="adminAccount != null and adminAccount != ''">
                admin_account = #{adminAccount},
            </if>
            <if test="adminPassword != null and adminPassword != ''">
                admin_password = #{adminPassword},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="phone != null and phone != ''">
                phone = #{phone},
            </if>
            <if test="adminAccountName != null and adminAccountName != ''">
                admin_account_name = #{adminAccountName},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from weathersystem.admin where id = #{id}
    </delete>

</mapper>