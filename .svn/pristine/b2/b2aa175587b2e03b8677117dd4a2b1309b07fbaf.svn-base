<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wanjia.infoshopmallmanage.mapper.ChatMessageMapper">

    <resultMap type="com.wanjia.infoshopmallmanage.entity.ChatMessage" id="ChatMessageMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="senderId" column="sender_id" jdbcType="INTEGER"/>
        <result property="receiverId" column="receiver_id" jdbcType="INTEGER"/>
        <result property="chatText" column="chat_text" jdbcType="VARCHAR"/>
        <result property="chatUid" column="chat_uid" jdbcType="VARCHAR"/>
        <result property="chatMessageType" column="chat_message_type" jdbcType="INTEGER"/>
        <result property="noDisturbState" column="no_disturb_state" jdbcType="INTEGER"/>
        <result property="noTopState" column="no_top_state" jdbcType="INTEGER"/>
        <result property="noRemindState" column="no_remind_state" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="isSystem" column="is_system" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ChatMessageMap">
        select
          id, sender_id, receiver_id, chat_text, chat_uid, chat_message_type, no_disturb_state, no_top_state, no_remind_state, create_time, is_system
        from weathersystem.chat_message
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ChatMessageMap">
        select
          id, sender_id, receiver_id, chat_text, chat_uid, chat_message_type, no_disturb_state, no_top_state, no_remind_state, create_time, is_system
        from weathersystem.chat_message
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ChatMessageMap">
        select
          id, sender_id, receiver_id, chat_text, chat_uid, chat_message_type, no_disturb_state, no_top_state, no_remind_state, create_time, is_system
        from weathersystem.chat_message
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="senderId != null">
                and sender_id = #{senderId}
            </if>
            <if test="receiverId != null">
                and receiver_id = #{receiverId}
            </if>
            <if test="chatText != null and chatText != ''">
                and chat_text = #{chatText}
            </if>
            <if test="chatUid != null and chatUid != ''">
                and chat_uid = #{chatUid}
            </if>
            <if test="chatMessageType != null">
                and chat_message_type = #{chatMessageType}
            </if>
            <if test="noDisturbState != null">
                and no_disturb_state = #{noDisturbState}
            </if>
            <if test="noTopState != null">
                and no_top_state = #{noTopState}
            </if>
            <if test="noRemindState != null">
                and no_remind_state = #{noRemindState}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="isSystem != null">
                and is_system = #{isSystem}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into weathersystem.chat_message
        <trim prefix = "(" suffix = ")" suffixOverrides=",">
            <if test="senderId != null">
                sender_id,
            </if> 
            <if test="receiverId != null">
                receiver_id,
            </if> 
            <if test="chatText != null and chatText != ''">
                chat_text,
            </if> 
            <if test="chatUid != null and chatUid != ''">
                chat_uid,
            </if> 
            <if test="chatMessageType != null">
                chat_message_type,
            </if> 
            <if test="noDisturbState != null">
                no_disturb_state,
            </if> 
            <if test="noTopState != null">
                no_top_state,
            </if> 
            <if test="noRemindState != null">
                no_remind_state,
            </if> 
            <if test="createTime != null">
                create_time,
            </if> 
            <if test="isSystem != null">
                is_system,
            </if> 
        </trim>
        <trim prefix = "values (" suffix = ")" suffixOverrides=",">
            <if test="senderId != null">
                #{senderId},
            </if>  
            <if test="receiverId != null">
                #{receiverId},
            </if>  
            <if test="chatText != null and chatText != ''">
                #{chatText},
            </if>  
            <if test="chatUid != null and chatUid != ''">
                #{chatUid},
            </if>  
            <if test="chatMessageType != null">
                #{chatMessageType},
            </if>  
            <if test="noDisturbState != null">
                #{noDisturbState},
            </if>  
            <if test="noTopState != null">
                #{noTopState},
            </if>  
            <if test="noRemindState != null">
                #{noRemindState},
            </if>  
            <if test="createTime != null">
                #{createTime},
            </if>  
            <if test="isSystem != null">
                #{isSystem},
            </if>  
        </trim>
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update weathersystem.chat_message
        <set>
            <if test="senderId != null">
                sender_id = #{senderId},
            </if>
            <if test="receiverId != null">
                receiver_id = #{receiverId},
            </if>
            <if test="chatText != null and chatText != ''">
                chat_text = #{chatText},
            </if>
            <if test="chatUid != null and chatUid != ''">
                chat_uid = #{chatUid},
            </if>
            <if test="chatMessageType != null">
                chat_message_type = #{chatMessageType},
            </if>
            <if test="noDisturbState != null">
                no_disturb_state = #{noDisturbState},
            </if>
            <if test="noTopState != null">
                no_top_state = #{noTopState},
            </if>
            <if test="noRemindState != null">
                no_remind_state = #{noRemindState},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="isSystem != null">
                is_system = #{isSystem},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from weathersystem.chat_message where id = #{id}
    </delete>

</mapper>