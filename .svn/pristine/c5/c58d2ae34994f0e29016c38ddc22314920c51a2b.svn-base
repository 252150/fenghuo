<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wanjia.infoshopmallmanage.mapper.CompanyStaffMapper">

    <resultMap type="com.wanjia.infoshopmallmanage.entity.CompanyStaff" id="CompanyStaffMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="staffLevelId" column="staff_level_id" jdbcType="INTEGER"/>
        <result property="staffId" column="staff_id" jdbcType="INTEGER"/>
        <result property="companyId" column="company_id" jdbcType="INTEGER"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="CompanyStaffMap">
        select
          id, staff_level_id, staff_id, company_id, status
        from weathersystem.company_staff
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="CompanyStaffMap">
        select
          id, staff_level_id, staff_id, company_id, status
        from weathersystem.company_staff
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="conditionQuery" resultMap="CompanyStaffMap">
        select
          id, staff_level_id, staff_id, company_id, status
        from weathersystem.company_staff
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="staffLevelId != null">
                and staff_level_id = #{staffLevelId}
            </if>
            <if test="staffId != null">
                and staff_id = #{staffId}
            </if>
            <if test="companyId != null">
                and company_id = #{companyId}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into weathersystem.company_staff
        <trim prefix = "(" suffix = ")" suffixOverrides=",">
            <if test="staffLevelId != null">
                staff_level_id,
            </if> 
            <if test="staffId != null">
                staff_id,
            </if> 
            <if test="companyId != null">
                company_id,
            </if> 
            <if test="status != null">
                status,
            </if> 
        </trim>
        <trim prefix = "values (" suffix = ")" suffixOverrides=",">
            <if test="staffLevelId != null">
                #{staffLevelId},
            </if>  
            <if test="staffId != null">
                #{staffId},
            </if>  
            <if test="companyId != null">
                #{companyId},
            </if>  
            <if test="status != null">
                #{status},
            </if>  
        </trim>
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update weathersystem.company_staff
        <set>
            <if test="staffLevelId != null">
                staff_level_id = #{staffLevelId},
            </if>
            <if test="staffId != null">
                staff_id = #{staffId},
            </if>
            <if test="companyId != null">
                company_id = #{companyId},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from weathersystem.company_staff where id = #{id}
    </delete>
    
    <!--获取待处理的加入公司的申请信息-->
    <select id="getCompanyStaffs" resultType="com.wanjia.infoshopmallmanage.entity.CompanyStaffNHS">
        select tmp.id, staff_level_id, staff_id, company_id,nickname,user_head_image,signature 
        from user 
        INNER JOIN (select id, staff_level_id, staff_id, company_id from company_staff where company_id = (select company_id from company where user_id = (select user_id from admin where id = #{adminId})) and status = 2) AS tmp 
        ON tmp.staff_id = user.id
    </select>
    
    <!--获取已经加入公司的员工信息(不包括自己(企业掌控人))-->
    <select id="getStaffs" resultType="com.wanjia.infoshopmallmanage.entity.CompanyStaffNHS">
        select tmp.id, staff_level_id, staff_id, company_id,nickname,user_head_image,signature 
        from user 
        INNER JOIN (select id, staff_level_id, staff_id, company_id from company_staff where company_id = (select company_id from company where user_id = (select user_id from admin where id = #{adminId})) and status = 1 and staff_level_id != 0) AS tmp 
        ON tmp.staff_id = user.id
    </select>
    
    <!--查询boss的员工记录-->
    <select id="selectBossRecord" resultType="com.wanjia.infoshopmallmanage.entity.CompanyStaffNHS">
        select
          id, staff_level_id, staff_id, company_id, status
        from weathersystem.company_staff
        where staff_id = #{staffId} and staff_level_id = 0
    </select>

</mapper>