<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wanjia.infoshopmallmanage.mapper.FriendGroupMapper">

    <resultMap type="com.wanjia.infoshopmallmanage.entity.FriendGroup" id="FriendGroupMap">
        <result property="groupId" column="group_id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="groupOrder" column="group_order" jdbcType="INTEGER"/>
        <result property="groupName" column="group_name" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="FriendGroupMap">
        select
          group_id, user_id, group_order, group_name, create_time
        from weathersystem.friend_group
        where group_id = #{groupId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="FriendGroupMap">
        select
          group_id, user_id, group_order, group_name, create_time
        from weathersystem.friend_group
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="FriendGroupMap">
        select
          group_id, user_id, group_order, group_name, create_time
        from weathersystem.friend_group
        <where>
            <if test="groupId != null">
                and group_id = #{groupId}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="groupOrder != null">
                and group_order = #{groupOrder}
            </if>
            <if test="groupName != null and groupName != ''">
                and group_name = #{groupName}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="groupId" useGeneratedKeys="true">
        insert into weathersystem.friend_group
        <trim prefix = "(" suffix = ")" suffixOverrides=",">
            <if test="userId != null">
                user_id,
            </if> 
            <if test="groupOrder != null">
                group_order,
            </if> 
            <if test="groupName != null and groupName != ''">
                group_name,
            </if> 
            <if test="createTime != null">
                create_time,
            </if> 
        </trim>
        <trim prefix = "values (" suffix = ")" suffixOverrides=",">
            <if test="userId != null">
                #{userId},
            </if>  
            <if test="groupOrder != null">
                #{groupOrder},
            </if>  
            <if test="groupName != null and groupName != ''">
                #{groupName},
            </if>  
            <if test="createTime != null">
                #{createTime},
            </if>  
        </trim>
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update weathersystem.friend_group
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="groupOrder != null">
                group_order = #{groupOrder},
            </if>
            <if test="groupName != null and groupName != ''">
                group_name = #{groupName},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </set>
        where group_id = #{groupId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from weathersystem.friend_group where group_id = #{groupId}
    </delete>

</mapper>