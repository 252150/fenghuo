<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wanjia.infoshopmallmanage.mapper.EnvParasMapper">

    <resultMap type="com.wanjia.infoshopmallmanage.entity.EnvParas" id="EnvParasMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="paraName" column="para_name" jdbcType="VARCHAR"/>
        <result property="paraKey" column="para_key" jdbcType="VARCHAR"/>
        <result property="paraValue" column="para_value" jdbcType="VARCHAR"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="EnvParasMap">
        select
          id, para_name, para_key, para_value, update_time, create_time
        from weathersystem.env_paras
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="EnvParasMap">
        select
          id, para_name, para_key, para_value, update_time, create_time
        from weathersystem.env_paras
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="EnvParasMap">
        select
          id, para_name, para_key, para_value, update_time, create_time
        from weathersystem.env_paras
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="paraName != null and paraName != ''">
                and para_name = #{paraName}
            </if>
            <if test="paraKey != null and paraKey != ''">
                and para_key = #{paraKey}
            </if>
            <if test="paraValue != null and paraValue != ''">
                and para_value = #{paraValue}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into weathersystem.env_paras
        <trim prefix = "(" suffix = ")" suffixOverrides=",">
            <if test="paraName != null and paraName != ''">
                para_name,
            </if> 
            <if test="paraKey != null and paraKey != ''">
                para_key,
            </if> 
            <if test="paraValue != null and paraValue != ''">
                para_value,
            </if> 
            <if test="updateTime != null">
                update_time,
            </if> 
            <if test="createTime != null">
                create_time,
            </if> 
        </trim>
        <trim prefix = "values (" suffix = ")" suffixOverrides=",">
            <if test="paraName != null and paraName != ''">
                #{paraName},
            </if>  
            <if test="paraKey != null and paraKey != ''">
                #{paraKey},
            </if>  
            <if test="paraValue != null and paraValue != ''">
                #{paraValue},
            </if>  
            <if test="updateTime != null">
                #{updateTime},
            </if>  
            <if test="createTime != null">
                #{createTime},
            </if>  
        </trim>
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update weathersystem.env_paras
        <set>
            <if test="paraName != null and paraName != ''">
                para_name = #{paraName},
            </if>
            <if test="paraKey != null and paraKey != ''">
                para_key = #{paraKey},
            </if>
            <if test="paraValue != null and paraValue != ''">
                para_value = #{paraValue},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from weathersystem.env_paras where id = #{id}
    </delete>
    
    <update id="updateRecordByParaKey">
        update weathersystem.env_paras
        set update_time = #{updateTime}            
        where para_key = #{paraKey}
    </update>
</mapper>