<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wanjia.infoshopmallmanage.mapper.CommentMapper">

    <resultMap type="com.wanjia.infoshopmallmanage.entity.Comment" id="CommentMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="orderId" column="order_id" jdbcType="INTEGER"/>
        <result property="goodsId" column="goods_id" jdbcType="INTEGER"/>
        <result property="onlyId" column="only_id" jdbcType="VARCHAR"/>
        <result property="goodsType" column="goods_type" jdbcType="INTEGER"/>
        <result property="goodsScore" column="goods_score" jdbcType="INTEGER"/>
        <result property="serviceScore" column="service_score" jdbcType="INTEGER"/>
        <result property="commentContent" column="comment_content" jdbcType="VARCHAR"/>
        <result property="commentImages" column="comment_images" jdbcType="VARCHAR"/>
        <result property="commentTime" column="comment_time" jdbcType="TIMESTAMP"/>
        <result property="isAdditional" column="is_additional" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="CommentMap">
        select
          id, user_id, order_id, goods_id, only_id, goods_type, goods_score, service_score, comment_content, comment_images, comment_time, is_additional
        from weathersystem.comment
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="CommentMap">
        select
          id, user_id, order_id, goods_id, only_id, goods_type, goods_score, service_score, comment_content, comment_images, comment_time, is_additional
        from weathersystem.comment
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="CommentMap">
        select
          id, user_id, order_id, goods_id, only_id, goods_type, goods_score, service_score, comment_content, comment_images, comment_time, is_additional
        from weathersystem.comment
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="orderId != null">
                and order_id = #{orderId}
            </if>
            <if test="goodsId != null">
                and goods_id = #{goodsId}
            </if>
            <if test="onlyId != null and onlyId != ''">
                and only_id = #{onlyId}
            </if>
            <if test="goodsType != null">
                and goods_type = #{goodsType}
            </if>
            <if test="goodsScore != null">
                and goods_score = #{goodsScore}
            </if>
            <if test="serviceScore != null">
                and service_score = #{serviceScore}
            </if>
            <if test="commentContent != null and commentContent != ''">
                and comment_content = #{commentContent}
            </if>
            <if test="commentImages != null and commentImages != ''">
                and comment_images = #{commentImages}
            </if>
            <if test="commentTime != null">
                and comment_time = #{commentTime}
            </if>
            <if test="isAdditional != null">
                and is_additional = #{isAdditional}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into weathersystem.comment
        <trim prefix = "(" suffix = ")" suffixOverrides=",">
            <if test="userId != null">
                user_id,
            </if> 
            <if test="orderId != null">
                order_id,
            </if> 
            <if test="goodsId != null">
                goods_id,
            </if> 
            <if test="onlyId != null and onlyId != ''">
                only_id,
            </if> 
            <if test="goodsType != null">
                goods_type,
            </if> 
            <if test="goodsScore != null">
                goods_score,
            </if> 
            <if test="serviceScore != null">
                service_score,
            </if> 
            <if test="commentContent != null and commentContent != ''">
                comment_content,
            </if> 
            <if test="commentImages != null and commentImages != ''">
                comment_images,
            </if> 
            <if test="commentTime != null">
                comment_time,
            </if> 
            <if test="isAdditional != null">
                is_additional,
            </if> 
        </trim>
        <trim prefix = "values (" suffix = ")" suffixOverrides=",">
            <if test="userId != null">
                #{userId},
            </if>  
            <if test="orderId != null">
                #{orderId},
            </if>  
            <if test="goodsId != null">
                #{goodsId},
            </if>  
            <if test="onlyId != null and onlyId != ''">
                #{onlyId},
            </if>  
            <if test="goodsType != null">
                #{goodsType},
            </if>  
            <if test="goodsScore != null">
                #{goodsScore},
            </if>  
            <if test="serviceScore != null">
                #{serviceScore},
            </if>  
            <if test="commentContent != null and commentContent != ''">
                #{commentContent},
            </if>  
            <if test="commentImages != null and commentImages != ''">
                #{commentImages},
            </if>  
            <if test="commentTime != null">
                #{commentTime},
            </if>  
            <if test="isAdditional != null">
                #{isAdditional},
            </if>  
        </trim>
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update weathersystem.comment
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="orderId != null">
                order_id = #{orderId},
            </if>
            <if test="goodsId != null">
                goods_id = #{goodsId},
            </if>
            <if test="onlyId != null and onlyId != ''">
                only_id = #{onlyId},
            </if>
            <if test="goodsType != null">
                goods_type = #{goodsType},
            </if>
            <if test="goodsScore != null">
                goods_score = #{goodsScore},
            </if>
            <if test="serviceScore != null">
                service_score = #{serviceScore},
            </if>
            <if test="commentContent != null and commentContent != ''">
                comment_content = #{commentContent},
            </if>
            <if test="commentImages != null and commentImages != ''">
                comment_images = #{commentImages},
            </if>
            <if test="commentTime != null">
                comment_time = #{commentTime},
            </if>
            <if test="isAdditional != null">
                is_additional = #{isAdditional},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from weathersystem.comment where id = #{id}
    </delete>

</mapper>