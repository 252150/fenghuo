<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wanjia.infoshopmallmanage.mapper.ChartImageMapper">

    <resultMap type="com.wanjia.infoshopmallmanage.entity.ChartImage" id="ChartImageMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="chartImage" column="chart_image" jdbcType="VARCHAR"/>
        <result property="chartType" column="chart_type" jdbcType="INTEGER"/>
        <result property="chartAddr" column="chart_addr" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ChartImageMap">
        select
          id, chart_image, chart_type, chart_addr, create_time
        from weathersystem.chart_image
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ChartImageMap">
        select
          id, chart_image, chart_type, chart_addr, create_time
        from weathersystem.chart_image
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ChartImageMap">
        select
          id, chart_image, chart_type, chart_addr, create_time
        from weathersystem.chart_image
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="chartImage != null and chartImage != ''">
                and chart_image = #{chartImage}
            </if>
            <if test="chartType != null">
                and chart_type = #{chartType}
            </if>
            <if test="chartAddr != null and chartAddr != ''">
                and chart_addr = #{chartAddr}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into weathersystem.chart_image
        <trim prefix = "(" suffix = ")" suffixOverrides=",">
            <if test="chartImage != null and chartImage != ''">
                chart_image,
            </if> 
            <if test="chartType != null">
                chart_type,
            </if> 
            <if test="chartAddr != null and chartAddr != ''">
                chart_addr,
            </if> 
            <if test="createTime != null">
                create_time,
            </if> 
        </trim>
        <trim prefix = "values (" suffix = ")" suffixOverrides=",">
            <if test="chartImage != null and chartImage != ''">
                #{chartImage},
            </if>  
            <if test="chartType != null">
                #{chartType},
            </if>  
            <if test="chartAddr != null and chartAddr != ''">
                #{chartAddr},
            </if>  
            <if test="createTime != null">
                #{createTime},
            </if>  
        </trim>
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update weathersystem.chart_image
        <set>
            <if test="chartImage != null and chartImage != ''">
                chart_image = #{chartImage},
            </if>
            <if test="chartType != null">
                chart_type = #{chartType},
            </if>
            <if test="chartAddr != null and chartAddr != ''">
                chart_addr = #{chartAddr},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from weathersystem.chart_image where id = #{id}
    </delete>

</mapper>